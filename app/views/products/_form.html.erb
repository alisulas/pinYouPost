<%= simple_form_for(product) do |f| %>
<%= render 'shared/error_messages', object: product %>
  <div class="field">
    <%= f.input :name, label: 'Apa yang akan anda sewakan' %>
  </div>

  <div class="form-group">
    <%= f.input :description, placeholder: 'Disewakan murah, syarat mudah' %>
  </div>

  <div class="field">
    <%= f.input :image, as: :file %>
  </div>

  <div class="actions">
    <%= f.button :submit, 'Daftarkan', class: "btn btn-success" %>
  </div>
<% end %>