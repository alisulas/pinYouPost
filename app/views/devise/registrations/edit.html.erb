<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="well">
        <h2 class="page-header text-center">Edit <%= resource_name.to_s.humanize %></h2>


        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, autofocus: true %>
          <%= f.radio_button :is_female, '1' %> <%= f.label :is_female, "Female" %> 
          <%= f.radio_button :is_female, '0' %> <%= f.label :is_female, "Male" %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :phone_number, as: :tel %>
          <%= f.input :date_of_birth, as: :date, start_year: 1950, end_year: 2010 %>
          
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", placeholder: "kosongkan jika tidak ingin merubah", required: false %>
          <%= f.input :password_confirmation, label: "konfirmasi password", required: false %>
          <%= f.input :current_password, label: "password lama", required: true %>
          <%= f.input :avatar, as: :file, label: "Profile Picture" %>
          <% if @user.avatar? %>
          <%= image_tag @user.avatar.url(:thumb) %>
          <% end %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
        <% end %>

      </div>

      <h4>Cancel my account</h4>
      Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Anda yakin?" }, method: :delete , class: "btn btn-success btn-sm" %>
      <%= link_to "Kembali", :back, class: "btn btn-success btn-sm" %>
    </div>
  </div>
</div>